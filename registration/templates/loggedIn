		<script>
			var myIndex1=0;
			element1();
			function element1()
			{
				var i;
				var x=document.getElementsByClassName("mySlides");
				for(i=0;i<x.length;i++)
				{
				x[i].style.display="none";
				}
				myIndex1++;
				if(myIndex1 > x.length)
				{
				myIndex1=1;
				}
				x[myIndex1-1].style.display = "block";
				setTimeout(element1, 4000);
			}
			</script>
